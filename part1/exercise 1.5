import React from 'react';
import ReactDOM from 'react-dom';

const Header = (props) => {
  return (
    <div>
      <p>
        The curse is: {props.course}
      </p>
    </div>
  )
}
const Content = (props) => {
  return (
    <div>
    <h4>
      The content of this course is:
    </h4>
    <p>
        {props.parts}
    </p>
    </div>
  )
}
const Footer = (props) => {
  return (
    <div>
      <h5>
       The total of exercises are: {props.parts}
      </h5>
    </div>
  )
}
const App = () => {
  const course = {
      name:'Half Stack application development',
      parts: [      
      {
        name: 'Fundamentals of React',
        exercises: 10,
      },
      {
        name: 'Using props to pass data',
        exercises: 7
      },
      {
        name: 'State of a component',
        exercises: 14
      }
    ]
    }
  return (
    <div>
    <Header course={course.name}/>
    <Content parts={course.parts.map((part, index) => (
      <div key={index}>
        {part.name} {part.exercises}
      </div>
    ))}/>
    <Footer parts= {course.parts.reduce((total, part) => total + part.exercises, 0)}/>
  </div>
  )
}

ReactDOM.render(<App />, document.getElementById('root'))
