import React, { useState } from 'react'
import ReactDom from 'react-dom'

const Button = (props) => (
  <button onClick={props.handleClick}>
    {props.text}
  </button>
)
const Stastics = (props) => {
  return(
    <div>
    <h1>Stastics</h1>
      Good: {props.good}<br></br>
      Neutral: {props.neutral}<br></br>
      Bad: {props.bad}<br></br>
      All: {props.good+props.neutral+props.bad}<br></br>
      Average:{props.good+(-props.bad)}<br></br>
      Positive: {(props.good/props.all)*100}%<br></br>
    </div>
  )
}
const App = () => {
  const [good, setGood] = useState(0)
  const [neutral, setNeutral] = useState(0)
  const [bad, setBad] = useState(0)
  return (
    <div>
      <h1>Give us a FeedBack!</h1><br></br>
      <Button handleClick={() =>setGood(good+1)} text="Good" />
      <Button handleClick={() =>setNeutral(neutral+1)} text="Neutral" />
      <Button handleClick={() =>setBad(bad+1)} text="Bad" /><br></br>
      <Stastics good={good} neutral={neutral} bad={bad} all={good+neutral+bad}/>
    </div>
  )
}
ReactDom.render(
  <App />,
  document.getElementById('root')
)
